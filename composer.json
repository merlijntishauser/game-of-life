{
  "name": "dvandam/GameOfLife",
  "description": "cli implementation of Conway's game of life in PHP",
  "license": "MIT",
  "type": "library",
  "authors": [
    { "name": "Danny van Dam", "email": "danny@codeprakker.nl" },
    { "name": "Merlijn Tishauser", "email": "merlijn@gargleblaster.org" }
  ],
  "autoload": {
    "psr-4": {
      "GameOfLife\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GameOfLife\\Tests\\Acceptance\\": "tests/acceptance/"
    }
  },
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.4",
    "friendsofphp/php-cs-fixer": "^1.2",
    "phpmd/phpmd": "^2.0.0",
    "mockery/mockery": "^0.9.4",
    "php-mock/php-mock-mockery": "^1.1",
    "php-mock/php-mock-phpunit": "^1.1",
    "behat/behat": "^3.1"
  },
  "config": {
    "bin-dir": "bin"
  }
}
